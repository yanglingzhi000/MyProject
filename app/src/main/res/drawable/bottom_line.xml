<?xml version="1.0" encoding="UTF-8"?>  
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
    <item>  
        <shape>  
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/dp_1" android:color="@color/bottomline" />
            <corners android:radius="@dimen/dp_50"/>
        </shape>  
    </item>  
    <item android:bottom="@dimen/dp_1">  
        <shape>  
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/dp_1" android:color="@android:color/white"  />
            <corners android:radius="@dimen/dp_50"/>
        </shape>  
    </item>  
</layer-list>
